---
const whatsappNumber = "+5216691178152"; 
const whatsappMessage = "Hola, me interesa obtener información sobre seguros";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---

<section class="bg-beige-default px-6 py-12 md:py-20">
  <div class="max-w-3xl mx-auto text-center">
    <div class="mb-10 md:mb-12">
      <img 
        src="/logo.png" 
        alt="Logo Coco Mendoza Seguros" 
        class="mx-auto w-64 md:w-80 lg:w-96"
      />
    </div>
    <h1 class="font-heading font-bold text-3xl md:text-4xl lg:text-5xl leading-tight text-text-heading mb-6 md:mb-8">
      Tu Futuro, Asegurado <br class="hidden md:block">con Coco Mendoza Seguros
    </h1>
    <p class="text-base md:text-lg text-text-body leading-relaxed mb-8 md:mb-10 max-w-xl mx-auto">
      Seguros personalizados para tu hogar, auto, salud y retiro. Respaldados por Allianz.
    </p>
    <a 
      href={whatsappLink}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block w-full md:w-auto md:min-w-[320px] bg-whatsapp text-white font-semibold py-4 px-8 rounded-lg shadow-md hover:bg-[#20BA5A] transition-colors"
    >
      WhatsApp
    </a>
    <div class="mt-12 md:mt-16 pt-8 border-t border-border/30">
      <div class="flex flex-col items-center gap-2">
        <div class="text-blue-primary font-bold text-lg md:text-xl">
          Allianz ®
        </div>
        <div class="text-sm md:text-base text-text-light">
          Asesor Certificado
        </div>
      </div>
    </div>
  </div>
</section>