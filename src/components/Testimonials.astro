---
const testimonials = [
  {
    id: 1,
    name: 'Rocío del Pilar',
    photo: 'src/assets/pilar.JPG',
    text: 'Excelente servicio y claridad en la información, seguimiento puntual, muy atenta a mis necesidades. Muchas gracias por el apoyo',
    rating: 5
  },
  {
    id: 2,
    name: 'Samuel',
    photo: 'src/assets/samuel.JPG',
    text: 'Muy profesional y confiable. Me ayudó a encontrar el seguro perfecto para mi familia. Totalmente recomendable.',
    rating: 5
  },
  {
    id: 3,
    name: 'Didier Hernández Mendoza',
    photo: 'src/assets/Didier.JPG',
    text: 'Atención personalizada excepcional. Coco me explicó cada detalle y encontramos la mejor opción para mis necesidades.',
    rating: 5
  }
];
---

<section class="bg-white py-16 px-6">
  <div class="max-w-container mx-auto">
    
    <!-- Section Title -->
    <h2 class="font-heading font-bold text-3xl md:text-4xl text-text-heading text-center mb-12">
      Lo que dicen nuestros clientes
    </h2>

    <!-- Carousel Container -->
    <div class="relative max-w-lg mx-auto">
      
      <!-- Testimonials Slider -->
      <div id="testimonials-slider" class="overflow-hidden">
        <div id="testimonials-track" class="flex transition-transform duration-300 ease-in-out">
          
          {testimonials.map((testimonial) => (
            <div class="w-full shrink-0 px-4">
              <article class="bg-white border border-border rounded-xl p-8 text-center shadow-sm">
                
                <!-- Client Photo -->
                <div class="mb-6">
                  <img 
                    src={testimonial.photo} 
                    alt={testimonial.name}
                    class="w-20 h-20 rounded-full mx-auto object-cover bg-gray-200"
                  />
                </div>

                <!-- Star Rating -->
                <div class="flex justify-center gap-1 mb-6">
                  {[...Array(testimonial.rating)].map(() => (
                    <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                  ))}
                </div>

                <!-- Testimonial Text -->
                <p class="text-text-body text-base leading-relaxed mb-6">
                  {testimonial.text}
                </p>

                <!-- Client Name -->
                <p class="font-semibold text-text-heading text-lg">
                  {testimonial.name}
                </p>

              </article>
            </div>
          ))}

        </div>
      </div>

      <!-- Dots Navigation -->
      <div class="flex justify-center gap-2 mt-8">
        {testimonials.map((_, index) => (
          <button 
            class="dot w-2.5 h-2.5 rounded-full transition-all duration-300"
            class:list={[index === 0 ? 'bg-blue-primary w-8' : 'bg-gray-300']}
            data-index={index}
            aria-label={`Ver testimonio ${index + 1}`}
          />
        ))}
      </div>

    </div>

  </div>
</section>

<script>
  const track = document.getElementById('testimonials-track');
  const dots = document.querySelectorAll('.dot');
  let currentIndex = 0;
  const totalSlides = dots.length;

  function updateSlider(index: number) {
    if (!track) return;
    
    // Update track position
    const offset = -index * 100;
    track.style.transform = `translateX(${offset}%)`;
    
    // Update dots
    dots.forEach((dot, i) => {
      if (i === index) {
        dot.classList.remove('bg-gray-300', 'w-2.5');
        dot.classList.add('bg-blue-primary', 'w-8');
      } else {
        dot.classList.remove('bg-blue-primary', 'w-8');
        dot.classList.add('bg-gray-300', 'w-2.5');
      }
    });
    
    currentIndex = index;
  }

  // Dot click handlers
  dots.forEach((dot) => {
    dot.addEventListener('click', () => {
      const index = parseInt(dot.getAttribute('data-index') || '0');
      updateSlider(index);
    });
  });

  // Touch/swipe support
  let touchStartX = 0;
  let touchEndX = 0;

  const slider = document.getElementById('testimonials-slider');
  
  if (slider) {
    slider.addEventListener('touchstart', (e) => {
      touchStartX = e.touches[0].clientX;
    });

    slider.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].clientX;
      handleSwipe();
    });
  }

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0 && currentIndex < totalSlides - 1) {
        // Swipe left - next
        updateSlider(currentIndex + 1);
      } else if (diff < 0 && currentIndex > 0) {
        // Swipe right - previous
        updateSlider(currentIndex - 1);
      }
    }
  }
</script>